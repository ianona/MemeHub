        <form class="hidden" action="profile" method="get" id="profile">
            <input hidden="hidden" type="text" id="profileInput" name="profileID">
        </form>
    </div>
</div>

<!-------SHARE MEME MODAL------>
<div class="ui small modal share_modal">
    <i class="close icon"></i>
    <div class="header">Share meme</div>
    <div class="content">
        <form class="ui form" id="shareMeme">
            <div class="field">
                <label>Share to:</label>
                <select name="shared_users" id="share_users" class="chosen_users" multiple></select>
            </div>
            <div class="ui inverted button orange" id="share">Share</div>
        </form>
    </div>
</div>